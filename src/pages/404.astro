---
import BaseLayout from '@layouts/base.astro';

import seoImage from '@images/mainPhotoDesktop.png'
import photo from '@images/404bg.png'
import Map from '@components/Map.astro';
import classy from '@utils/classy';
import { Image } from 'astro:assets';

const seo = {
  title: 'Página no encontrada',
  description: '',
  image: seoImage,
}

const wrapClasses = classy([
  'flex',
  'flex-col',
  'md:flex-row',
])

const contactPhotoClasses = classy([
  'w-full',
  'md:max-w-1/3',
  'x2:max-w-1/2',
])

const contactFormWrapClasses = classy([
  'w-full',
  'content-center',
  'flex',
  'flex-col',
  'items-start',
  'self-center',
  'p-8 md:pl-16'
])
---
<BaseLayout {seo} breadcrumbs={{title:"Ir a Inicio", url:'/'}}>
<div {...wrapClasses}>
  <div {...contactFormWrapClasses}>
    <h1 class="typo-header-m md:header-xxl text-gray font-bold mb-4 2xl:mb-12">
      Página no encontrada...
    </h1>
    <p class="typo-body-xl 2xl:typo-header-m text-blue mb-4">
      Lo sentimos, la página que buscas no existe o ha sido eliminada.
      </br>
      Te invitamos a buscar lo que necesites:
    </p>
    <a href="/busqueda" aria-label="Enlace a Busqueda" class="flex border border-gray w-full md:w-1/2 xl:w-1/3 bg-white">
      <span class="p-1 content-center text-gray typo-body-m w-full bg-white">
        Buscar
      </span>
      <div class=' aspect-square w-8 bg-metal flex justify-center'>
        <div class='max-w-4 max-h-full'>
          <svg width="100%" height="100%" viewBox="0 0 23 23" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M16.438 14.4654H15.3991L15.0309 14.1103C16.3196 12.6112 17.0955 10.665 17.0955 8.54774C17.0955 3.82676 13.2687 0 8.54774 0C3.82676 0 0 3.82676 0 8.54774C0 13.2687 3.82676 17.0955 8.54774 17.0955C10.665 17.0955 12.6112 16.3196 14.1103 15.0309L14.4654 15.3991V16.438L21.0406 23L23 21.0406L16.438 14.4654ZM8.54774 14.4654C5.2733 14.4654 2.63007 11.8222 2.63007 8.54774C2.63007 5.2733 5.2733 2.63007 8.54774 2.63007C11.8222 2.63007 14.4654 5.2733 14.4654 8.54774C14.4654 11.8222 11.8222 14.4654 8.54774 14.4654Z" fill="#C9EEF2"/>
          </svg>
        </div>
      </div>
    </a>
  </div>
  <div {...contactPhotoClasses}>
    <Image
      {...photo}
      alt=''
    />
  </div>
</div>
<Map/>
</BaseLayout>
