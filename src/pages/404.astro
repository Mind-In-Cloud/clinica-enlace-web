---
import BaseLayout from '@layouts/base.astro';

import seoImage from '@images/mainPhotoDesktop.png'
import photo from '@images/404bg.png'
import Map from '@components/Map.astro';
import classy from '@utils/classy';
import { Image } from 'astro:assets';

const seo = {
  title: 'Página no encontrada',
  description: '',
  image: seoImage,
}

const wrapClasses = classy([
  'flex',
  'flex-col',
  'md:flex-row',
])

const contactPhotoClasses = classy([
  'w-full',
  'md:max-w-1/3',
  'x2:max-w-1/2',
])

const contactFormWrapClasses = classy([
  'w-full',
  'content-center',
  'flex',
  'flex-col',
  'items-start',
  'self-center',
  'p-8 md:pl-16'
])
---
<BaseLayout {seo}>
<div {...wrapClasses}>
  <div {...contactFormWrapClasses}>
    <h1 class="typo-header-m md:header-xxl text-gray font-bold mb-4 2xl:mb-12">
      Página no encontrada...
    </h1>
    <p class="typo-body-xl 2xl:typo-header-m text-blue mb-4">
      Lo sentimos, la página que buscas no existe o ha sido eliminada.
      </br>
      Te invitamos a buscar lo que necesites:
    </p>
    <a href="/busqueda" aria-label="Enlace a Busqueda" class="flex border border-gray">
      <span class="p-1 content-center text-gray typo-body-m">
        Buscar
      </span>
      <div class='ml-4 max-w-8 max-h-full'>
        <svg width="100%" height="100%" viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect width="50" height="50" rx="2" fill="#6588A6"/>
          <path d="M29.438 28.4654H28.3991L28.0309 28.1103C29.3196 26.6112 30.0955 24.665 30.0955 22.5477C30.0955 17.8268 26.2687 14 21.5477 14C16.8268 14 13 17.8268 13 22.5477C13 27.2687 16.8268 31.0955 21.5477 31.0955C23.665 31.0955 25.6112 30.3196 27.1103 29.0309L27.4654 29.3991V30.438L34.0406 37L36 35.0406L29.438 28.4654ZM21.5477 28.4654C18.2733 28.4654 15.6301 25.8222 15.6301 22.5477C15.6301 19.2733 18.2733 16.6301 21.5477 16.6301C24.8222 16.6301 27.4654 19.2733 27.4654 22.5477C27.4654 25.8222 24.8222 28.4654 21.5477 28.4654Z" fill="#C9EEF2"/>
        </svg>
      </div>
    </a>
  </div>
  <div {...contactPhotoClasses}>
    <Image
      {...photo}
      alt=''
    />
  </div>
</div>
<Map/>
</BaseLayout>
