---
import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets';

interface Props {
  imagePath: string;
  altText: string;
  loading: 'lazy' | 'eager';
  class ?: string;
  widths ?: [number];
  sizes ?:  string;
}

const {
  imagePath,
  altText,
  loading = 'lazy',
  class: className = '',
  widths = [720, 1080],
  sizes = `(max-width: 360px) 720px, 1080px`
  // widths={[240, 540, 720, myImage.width]}
  // sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${myImage.width}px`}
} = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/*.{jpeg,jpg,png,gif}');
if (!images[imagePath]) throw new Error(`"${imagePath}" does not exist in glob: "src/assets/images/*.{jpeg,jpg,png,gif}"`);
---
<Picture
  src={`/.netlify/image?url=${images[imagePath]()}&fm=webp`}
  alt={altText}
  {loading}
  format='webp'
  class={className}
  widths = {widths}
  sizes = {sizes}
/>
