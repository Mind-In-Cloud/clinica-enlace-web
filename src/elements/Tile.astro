---
import Icon from "@elements/Icon.astro"
import classy from "@utils/classy";
import arrow from '@icons/flecha.svg?raw'

const {
  title = '',
  subtitle= '',
  url = '',
  style = '',
  icon = '',
  class : className = '',
} = Astro.props;

const tileClasses = classy([
  'p-4',
  'text-white',
  'text-center',
  'aspect-tile',
  `bg-${style}`,
  'flex flex-col',
  'items-center',
  'place-content-between',
  style === 'blue' && 'bg-gray',
  className
])

const titleClasses = classy([
  'md:typo-header-xxs',
  'lg:typo-header-xs',
  'xl:typo-header-m'
])

const subtitleClasses = classy([
  'text-xs md:typo-body-s lg:text-sm xl:typo-body-xl antialiased',
])
---
<a href={url} {...tileClasses}>
  <Icon icon={icon} class="max-w-32 max-h-[33%] w-full"/>
  <p {...titleClasses}>
    <Fragment set:html={title}/>
  </p>
  <p {...subtitleClasses}>
    {subtitle}
  </p>
  <Icon icon={arrow} class="max-h-4 xl:max-h-6 w-full"/>
</a>
<style>
  .aspect-tile {
    aspect-ratio: 8 / 7;
  }
  .bg-tint {
    background-color: #4CAEB9;
  }
</style>
