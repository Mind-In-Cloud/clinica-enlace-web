---
import classy from "@utils/classy"

const {
  color = 'green',
  isElement = false,
  class : className = ''
} = Astro.props

const lineClasses = classy([
  !isElement ? 'mx-8 mb-9 lg:mx-36 mt-16 lg:mt-10' : '',
  `bg-${color}`,
  'border-0',
  'h-0.5',
  className
])
---
<hr { ...lineClasses } />
