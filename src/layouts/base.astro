---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

import Favicon from "@utils/favicon.astro";

import Link  from "@elements/Link.astro";

import '@styles/global.css';
import '@styles/typography.css';

const { pageTitle } = Astro.props ;

const headerTitle =  `Astro | ${pageTitle || 'Missing Title'}`
const Title = pageTitle || headerTitle;
---

<html lang="en">
	<head>
		<Favicon/>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{headerTitle}</title>
	</head>
	<body>
		<Header />
		<h1>{Title}</h1>
		<Link url="https://www.google.com" text="temp" style="metal"/>
    <slot />
		<Footer />
		<script>
			import "../scripts/menu.js"
		</script>
	</body>
</html>
